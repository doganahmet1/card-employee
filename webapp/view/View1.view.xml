<mvc:View
	controllerName="cardemployee.controller.View1"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f">
	
	<Panel id="panelForGridList" backgroundDesign="Transparent">
	

		<f:GridList
			id="gridList"
			headerText="Employee Info"
			items="{/Employees}">
			<f:GridListItem>
			<f:content items="{/Employees}">
		<f:Card
			headerPosition="Top"
		>
			<f:content>

					<VBox class="sapUiSmallMargin">
				
					
					<VBox>
				
                    <Avatar src="{path:'Photo', formatter: '.convertImagePath'}" displayShape="Square"></Avatar>
					<Text text=" {EmployeeID} {FirstName} {LastName}"/>
					
					</VBox>
					
					<Title text=" Title:{Title}" wrapping="true"  />
					<Label text="BirthDate: {path:'BirthDate', type: 'sap.ui.model.type.Date', formatOptions:{ UTC: true, pattern: 'dd/MM/yyyy'} }" wrapping="true" />
					<Label text="HireDate: {path:'HireDate', type: 'sap.ui.model.type.Date', formatOptions:{ UTC: true, pattern: 'dd/MM/yyyy'}}" wrapping="true" />
					<Label text="{Country}" wrapping="true" />
				</VBox>
			</f:content>
			<f:header>
			</f:header>
		</f:Card>
				</f:content>
			</f:GridListItem>
		</f:GridList>
	</Panel>
</mvc:View>


